<% if flash[:msg] %>
     <h3><%= pluralize(flash[:msg].count,'error').upcase%>: </h3>
    <% flash[:msg].each do |msg| %>
        <%= msg %> <br>
    <% end %> <br><br>
<% end %>

<%= form_for @heroine do |f| %>
    <%= f.label :name, "Name:" %><br>
    <%= f.text_field :name %><br>
    <%= f.label :super_name, "Super Name:" %><br>
    <%= f.text_field :super_name %><br><br>
    <%= f.collection_select :power_id, @powers, :id, :name, prompt: true %><br><br>
    <%= f.submit %>
<% end %>