<h1>Create Heroine: </h1>

<% if flash[:messages] %>
    <h3><%= pluralize(flash[:messages].count, "error").upcase %>: </h3>
    <ul>
        <% flash[:messages].each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @heroine do |f| %>
    <%= f.label :name %><br />
    <%= f.text_field :name %><br />
    <%= f.label :super_name %><br />
    <%= f.text_field :super_name %><br />
    <%= f.label :power %><br />
    <%= f.collection_select :power_id, @powers, :id, :name, prompt: true %><br />
    <%= f.submit %>
<% end %>