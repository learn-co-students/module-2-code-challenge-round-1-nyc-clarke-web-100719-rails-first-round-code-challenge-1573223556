<h1>Create a New SuperHeroine</h1>
<hr>

<% if flash[:messages] %>
    <h2>ERROR</h2>
    <ul>
        <% flash[:messages].each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @heroine do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br> 

    <%= f.label :super_name %>
    <%= f.text_field :super_name %><br>

    <%= f.collection_select :power_id, Power.all, :id, :name %><br><br>

    <%= f.submit %>
<% end %>